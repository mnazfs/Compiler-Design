#include<stdio.h>
#include<ctype.>

char stack[100];
int top = -1;

void push(char x)
{
	stack[++top] = x;
}

char pop()
{
	if(top == -1)
		return ' ';
	return stack[top--];
	
}

int priority(char x)
{
	if(x == '(')
		return 0;
	if(x == '+' || x == '-')
		return 1;
	if(x == '*' || x == '/')
		return 2;
	return 0;
}
void main()
{
	char input[25], postfix[25] *e, x;
	printf("Enter expression: ");
	scanf("%s", exp);
	e = exp;
	int i = 0;
	while(*e != '\0') {
		if(isalnum(*e))
			postfix[i++] = *e;
		else if(*e == '(')
			push(*e);
		else if(*e == ')') {
			while((x=pop()) != '(')
				postfix[i++] = x;
		} else {
			while(priority(stack[top]) >= priority(*e))
				postfix[i++] = pop();
			push(*e);
		}
		e++;
		while(top != -1)
			postfix[i++] = pop();
	}
	
	printf("%s\n", postfix);
}
